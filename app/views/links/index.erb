

<h1> Links </h1>

<form action="/links/new">
  <input type="submit" value="Add Link">
</form>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title:  <%= link.title %>
      URL:    <%= link.url %>
      Tags:   <%= link.tags.map(&:tag).join(", ") %>
    </li>
  <% end %>
</ul>

<form action="/links">
  <input type="submit" value="Clear filters">
</form>

<form action="/tags" method = "get">
  <label for = "tag">
    Enter tag
  <input type = "text" name = "tag"/>
  </label>
  <input type="submit" value="Search tags"/>
</form>
